@model ML.Departamento
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregue Un Departamento</h1>

@using (Html.BeginForm("Form", "Departamento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-md-1" style="display: none;">
            @Html.TextBoxFor(model => model.IdDepartamento, new { @class = "hidden form-control", autocomplete = "off" })
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.NombreDepartamento, "Nombre Departamento:")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="fa-solid fa-layer-group fa-beat"></i><i class="bi bi-controller"> <i class="bi bi-calendar2-check"></i>   </i></span>
                @Html.TextBoxFor(model => model.NombreDepartamento, new { @class = "form-control",autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.NombreDepartamento, null, new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-3">
            @Html.LabelFor(model => model.DescripcionD, "Descripcion:")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="fa-solid fa-layer-group fa-beat"></i><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.DescripcionD, new { @class = "form-control",autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.DescripcionD, null, new { @class = "text-danger" })
            </div>
        </div>
               <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Area)
                @Html.DropDownListFor(model => model.Area.IdArea, new SelectList(Model.Area.Areas, "IdArea", "NombreArea"), "Seleccione un Area", new { @class = "form-control", @id = "ddlAutor" })
            </div>
        </div>

      
        <div class="glyphicon-up">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAllDepartamento", "Departamento", htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}