@model ML.Departamento
@{
    ViewData["Title"] = "GetAllDepartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAllDepartamento</h1>

@Html.ActionLink("ADD", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })



<div class="row">
    @if (Model.Departamentos != null)
    {
        //tabla
        <table class="table  table-bordered table-responsive table-hover" id="tblDepartamento">
            <thead>
                <tr>


                    <td class="text-center" style=" font-weight:bold;">Actualizar</td>
                    <td class="text-center" style=" font-weight:bold;">Departamento </td>
                    <td class="text-center" style=" font-weight:bold;">Descripción</td>
                    <td class="text-center" style=" font-weight:bold;">DELETE</td>

                </tr>

            </thead>

            <tbody>
                @foreach (ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>

                        <td class="text-center"><a class="btn btn-success glyphicon " href="@Url.Action("Form", "Departamento", new { IdDepartamento  = departamento.IdDepartamento})"></a></td>
                        <td>@departamento.NombreDepartamento </td>
                        <td>@departamento.DescripcionD</td>
                   

                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento  = departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
    }

</div>
