@model ML.Error
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar Error</h1>

@using (Html.BeginForm("Form", "Error", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
    

        <div class="col-md-3">
            @Html.LabelFor(model => model.DescripcionE, "Nombre DescripcionE:")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="fa-solid fa-signature fa-flip"></i><i class="bi bi-controller"> <i class="bi bi-calendar2-check"></i>   </i></span>
                @Html.TextBoxFor(model => model.DescripcionE, new { @class = "form-control",autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.DescripcionE, null, new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-3">
            @Html.LabelFor(model => model.Paso1, "Paso1:")
            <div class="input-group mb-2">
                <span class="input-group-text"> <i class="fa-solid fa-user fa-beat"></i>  <i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Paso1, new { @class = "form-control",autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Paso1, null, new { @class = "text-danger" })
            </div>
        </div>

       <div class="col-md-3">
            @Html.LabelFor(model => model.Paso2, "Paso2: ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="fa-solid fa-envelope fa-spin fa-spin-reverse"></i><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Paso3, new { @class = "form-control", @id="txtFechaA" })
            </div>
        </div>


        <div class="col-md-3">
            @Html.LabelFor(model => model.Paso3, "Paso3: ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="fa-solid fa-envelope fa-spin fa-spin-reverse"></i><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Paso3, new { @class = "form-control", @id="txtFechaA" })
            </div>
        </div>

 <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Area)
                @Html.DropDownListFor(model => model.Area.IdArea, new SelectList(Model.Area.Areas, "IdArea", "NombreArea"), "Seleccione un Area", new { @class = "form-control", @id = "ddlAutor" })
            </div>
        </div>


        <div class="glyphicon-up">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAllError", "Error", htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}